{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports" : true,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./src/**/*",
    "./tool/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
